{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "colcon build: Debug",
            "detail": "Build workspace (default)",
			"type": "shell",
			"command": "colcon build --merge-install --base-paths /overlay_ws --cmake-args '-DCMAKE_BUILD_TYPE=RelWithDebInfo' -Wall -Wextra -Wpedantic",
			"problemMatcher": [
				"$catkin-gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
        {
            "label": "colcon clean",
            "detail": "Run the clean target",
            "type": "shell",
            "command": "source /opt/ros/humble/setup.bash && colcon build --cmake-target clean",
            "problemMatcher": "$gcc"
        },
        {
            "label": "purge",
            "detail": "Purge workspace by deleting all generated files.",
            "type": "shell",
            "command": "rm -fr build install log; py3clean .",
            "problemMatcher": []
        },
	]
}